Package: anevah
Type: Package
Title: Haplotype-Based ANEVA (ANEVAh)
Version: 0.1.0
Authors@R: c(
  person(given = "Eric", family = "Song", email = "ejsong@ucsd.edu", role = c("aut", "cre")),
  person(given = "Paul", family = "Hoffman", email = "phoffman@nygenome.org", role = "aut", comment = c(ORCID = "0000-0002-7693-8957"))
